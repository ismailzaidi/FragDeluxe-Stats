<com.fragdeluxestats.customviews.DefaultItemCompare xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/secondryColor">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.fragdeluxestats.customviews.TextStyleView
            android:id="@+id/labelName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="AK47"
            android:textColor="@android:color/white"
            android:textSize="8sp"
            app:textType="bold" />

        <ImageView
            android:id="@+id/labelImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:adjustViewBounds="true"
             />
    </LinearLayout>

</com.fragdeluxestats.customviews.DefaultItemCompare>
