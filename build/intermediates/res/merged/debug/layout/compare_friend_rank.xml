<?xml version="1.0" encoding="utf-8"?>
<com.fragdeluxestats.customviews.RankView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/compare_selector"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            card_view:cardBackgroundColor="@color/profilecolor"
            card_view:cardCornerRadius="1dp"
            card_view:cardElevation="2dp">

            <com.fragdeluxestats.customviews.TextStyleView
                android:id="@+id/counterObject"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="10dp"
                android:text="#100"
                android:textColor="@android:color/white"
                android:textSize="10sp"
                app:textType="bold" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            card_view:cardBackgroundColor="@color/profilecolor"
            card_view:cardCornerRadius="1dp"
            card_view:cardElevation="2dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profileImage"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="4dp"
                    android:src="@drawable/seangares"
                    app:civ_border_color="@color/greenbutton"
                    app:civ_border_width="1dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="2dp"
                    android:layout_toEndOf="@+id/profileImage">

                    <com.fragdeluxestats.customviews.TextStyleView
                        android:id="@+id/profileName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_gravity="start"
                        android:layout_toStartOf="@+id/profileStatsButton"
                        android:gravity="start"
                        android:lines="2"
                        android:textColor="@android:color/white"
                        android:textSize="8sp"
                        app:textType="bold" />
                    <com.fragdeluxestats.customviews.TextStyleView
                        android:id="@+id/profilePoints"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_gravity="start"
                        android:layout_toStartOf="@+id/profileStatsButton"
                        android:gravity="start"
                        android:lines="2"
                        android:text="6,343 points"
                        android:textColor="@android:color/white"
                        android:textSize="8sp"
                        app:textType="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/compareCountryImage"
                            android:layout_width="15dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:adjustViewBounds="true" />

                        <TextView
                            android:id="@+id/compareCountryName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:gravity="center"
                            android:textColor="@android:color/white"
                            android:textSize="8sp"
                            tools:text="United Kingdom" />

                    </LinearLayout>
                </LinearLayout>



            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>
</com.fragdeluxestats.customviews.RankView>

