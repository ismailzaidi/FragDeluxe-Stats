<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secondryColor"
    android:orientation="vertical">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-40dp"
        android:adjustViewBounds="true"
        android:src="@drawable/background_login" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="90dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <com.fragdeluxestats.customviews.TextStyleView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Select a player"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                app:textType="bold" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/guestRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="300dp"></android.support.v7.widget.RecyclerView>
    </LinearLayout>


</FrameLayout>