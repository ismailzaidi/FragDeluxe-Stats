<?xml version="1.0" encoding="utf-8"?>
<com.fragdeluxestats.customviews.StatView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_margin="1dp"
    app:cardBackgroundColor="@color/buttoncolor"
    app:cardCornerRadius="1dp"
    app:cardElevation="2dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true">

    <com.balysv.materialripple.MaterialRippleLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        app:mrl_rippleAlpha="0.1"
        app:mrl_rippleColor="#ffffff"
        app:mrl_rippleDelayClick="true"
        app:mrl_rippleDimension="0dp"
        app:mrl_rippleDuration="50"
        app:mrl_rippleFadeDuration="10"
        app:mrl_rippleHover="true"
        app:mrl_rippleInAdapter="false"
        app:mrl_rippleOverlay="true"
        app:mrl_ripplePersistent="false"
        app:mrl_rippleRoundedCorners="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/statImage"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/time_icon"
                android:visibility="gone" />

            <com.fragdeluxestats.customviews.TextStyleView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/statName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="TIME PLAYED"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                app:textType="normal" />

            <com.fragdeluxestats.customviews.TextStyleView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/statValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="2522h"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                app:textType="bold" />
        </LinearLayout>
    </com.balysv.materialripple.MaterialRippleLayout>
</com.fragdeluxestats.customviews.StatView>

