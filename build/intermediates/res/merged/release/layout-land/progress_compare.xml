<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/secondryColor"
    android:orientation="vertical">

    <com.fragdeluxestats.customviews.TextStyleView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:background="@color/profilecolor"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="Loading your stats"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        app:textType="bold" />

    <com.mikhaellopez.circularprogressbar.CircularProgressBar
        android:id="@+id/progressbar"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        app:background_progressbar_color="@color/secondryColor"
        app:background_progressbar_width="2dp"
        app:progressbar_color="@android:color/white"
        app:progressbar_width="2dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:stretchColumns="*">

            <TableRow>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/layoutOne"
                    android:visibility="gone"
                    android:orientation="vertical">
                    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/profileOneImageView"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:alpha="0.2"
                        tools:src="@drawable/sample"
                        app:civ_border_color="@color/profilecolor"
                        app:civ_border_width="1dp" />

                    <com.fragdeluxestats.customviews.TextStyleView
                        android:id="@+id/profileOneTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:drawablePadding="5dp"
                        android:gravity="center"
                        android:text="Servers"
                        android:textColor="@color/profilecolor"
                        android:textSize="12sp"
                        app:textType="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/layoutTwo"
                    android:visibility="gone"
                    android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/profileTwoImageView"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:alpha="0.2"
                        tools:src="@drawable/sample"
                        app:civ_border_color="@color/profilecolor"
                        app:civ_border_width="1dp" />

                    <com.fragdeluxestats.customviews.TextStyleView
                        android:id="@+id/profileTwoTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:drawablePadding="5dp"
                        android:gravity="center"
                        android:text="statistics"
                        android:textColor="@color/profilecolor"
                        android:textSize="12sp"
                        app:textType="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutThree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/profileThreeImageView"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:alpha="0.2"
                        tools:src="@drawable/sample"
                        app:civ_border_color="@color/profilecolor"
                        app:civ_border_width="1dp" />

                    <com.fragdeluxestats.customviews.TextStyleView
                        android:id="@+id/profileThreeTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:drawablePadding="5dp"
                        android:gravity="center"
                        android:text="weapons"
                        android:textColor="@color/profilecolor"
                        android:textSize="12sp"
                        app:textType="bold" />
                </LinearLayout>

            </TableRow>
        </TableLayout>
    </LinearLayout>
</LinearLayout>
