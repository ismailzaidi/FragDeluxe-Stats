<?xml version="1.0" encoding="utf-8"?>
<com.fragdeluxestats.customviews.MapView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    card_view:cardCornerRadius="0dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/secondryColor"
        android:orientation="vertical"
        android:padding="10dp">

        <ImageView
            android:id="@+id/mapImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <com.fragdeluxestats.customviews.TextStyleView
                android:id="@+id/mapName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:text="DE_MIRAGE"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                app:textType="bold" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.fragdeluxestats.customviews.TextStyleView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Time Spent"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                app:textType="normal" />

            <com.fragdeluxestats.customviews.TextStyleView
                android:id="@+id/mapTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:text="220h"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                app:textType="bold" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.fragdeluxestats.customviews.TextStyleView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Headshots"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                app:textType="normal" />

            <com.fragdeluxestats.customviews.TextStyleView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/mapHeadshot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:text="9896"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                app:textType="bold" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.fragdeluxestats.customviews.TextStyleView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Kills"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                app:textType="normal" />

            <com.fragdeluxestats.customviews.TextStyleView
                android:id="@+id/mapKills"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:text="15%"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                app:textType="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.fragdeluxestats.customviews.TextStyleView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Deaths"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                app:textType="normal" />

            <com.fragdeluxestats.customviews.TextStyleView
                android:id="@+id/mapDeaths"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:text="23,300"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                app:textType="bold" />
        </LinearLayout>
    </LinearLayout>
</com.fragdeluxestats.customviews.MapView>

